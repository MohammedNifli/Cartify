<%- include('../adminLayout/adminHeader.ejs') %>
            <section class="content-main">
                <div class="content-header">
                    <h2 class="content-title">Banners List</h2>
                    <div>
                        <a href="/admin/banner/add-bannerpg" class="btn btn-primary"><i class="material-icons md-plus"></i> Create new</a>
                    </div>
                </div>
                <div class="card mb-4">
                    <!--  -->
                    <!-- card-header end// -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bannerData.forEach(banner => { %>
                                    <tr>
                                        <td width="40%">
                                            <img src="/banner/<%= banner.bannerImage %>" class="img-sm img-avatar" alt="Banner Image" />
                                        </td>
                                        <td><%= banner.title %></td>
                                        <td><%= banner.description %></td>
                                        <td><%= banner.startDate.toDateString() %></td>
                                        <td><%= banner.endDate.toDateString() %></td>
                                        <td class="text-end">
                                            <a href="/admin/banner/edit-ban/<%=banner._id%>" class="btn btn-sm btn-brand rounded font-sm mt-15">Edit</a>
                                            <a href="/admin/banner/delete-ban/<%=banner._id%>" id="deleteButton" class="btn btn-sm btn-brand rounded font-sm mt-15" onclick="confirmDelete(event)">Delete</a>


                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                            
                            <!-- table-responsive.// -->
                        </div>
                    </div>
                    <!-- card-body end// -->
                </div>
                <!-- card end// -->
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </section>
           
            <script>
                function confirmDelete(event) {
                    // Prevent the default action of the link (i.e., navigating to the delete URL immediately)
                    event.preventDefault();
            
                    // Display a confirmation dialog box
                    if (confirm('Are you sure you want to delete this banner?')) {
                        // If the user confirms, proceed with the deletion by navigating to the delete URL
                        window.location.href = event.target.href;
                    } else {
                        // If the user cancels, do nothing
                        return false;
                    }
                }
            </script>
            

                
            
            <%- include('../adminLayout/adminFooter.ejs') %>
