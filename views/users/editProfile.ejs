		<script>
			function validateForm() {
				const fname = document.getElementById('fname').value.trim();
				const lname = document.getElementById('lname').value.trim();
				const email = document.getElementById('email').value.trim();
				const country = document.getElementById('inputCountry').value.trim();
				let isValid = true;
		
				// Validate First Name
				if (!fname) {
					document.getElementById('fname-error').innerText = "Please enter your First Name";
					isValid = false;
				} else {
					document.getElementById('fname-error').innerText = "";
				}
		
				// Validate Last Name
				if (!lname) {
					document.getElementById('lname-error').innerText = "Please enter your Last Name";
					isValid = false;
				} else {
					document.getElementById('lname-error').innerText = "";
				}
		
				// Validate Email Address
				if (!email) {
					document.getElementById('email-error').innerText = "Please enter your Email Address";
					isValid = false;
				} else if (!isValidEmail(email)) {
					document.getElementById('email-error').innerText = "Please enter a valid Email Address";
					isValid = false;
				} else {
					document.getElementById('email-error').innerText = "";
				}
		
				// Validate Country
				if (!country) {
					document.getElementById('country-error').innerText = "Please enter your Country";
					isValid = false;
				} else {
					document.getElementById('country-error').innerText = "";
				}
		
				return isValid;
			}
		
			// Function to validate email format
			function isValidEmail(email) {
    const emailRegex = /^[^\s@]+@gmail\.com$/;
    return emailRegex.test(email);
}

		</script>
